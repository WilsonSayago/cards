<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <h1 class="text-center text-muted">Your Wallet</h1>
    </div>
  </div>

  <% @cards.each do |card| %>
  <div class="row">
    <div class="col-lg-4 col-lg-offset-4">
      <div class="row panel panel-default">
        <div class="col-lg-12 text-center panel-body ">
          <%= link_to 'X', card, method: :delete, data: { confirm: 'Are you sure?' },class: "pull-right" %>
          <hr class="black-text">
          <i class="fa fa-cc-visa fa-2x pull-left" aria-hidden="true"></i>
          <b><%= card.get_number_card %></b>
          &nbsp;&nbsp;
          <%= card.expirate_date.strftime "%m/%Y" %>
        </div>

      </div>
    </div>
  </div>
  <%   end %>

  <div class="row">
    <div class="col-lg-12 text-center">
      <%= link_to 'Add a new card', new_card_path,class: "btn btn-default btn-lg" %>
    </div>
  </div>
</div>


